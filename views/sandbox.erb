<div class='row'>
  <form id='sandbox' action='#'>
    <div class='col span-6'>
      <fieldset>
        <label for='seed'>Random Seed Text (Optional)</label>
        <input id='seed' type='text' name='seed' placeholder='e.g. you@email.com'>
      </fieldset>
      
      <div class='row'>
        <div class='col span-6'>
          <fieldset>
            <label for='pixels'>Pixels</label>
            <input id='pixels' name='pixels' type="number" min="2" max="30" value="5">
          </fieldset>
        </div>
        <div class='col span-6'>
          <fieldset>
            <label for='density'>Density</label>
            <input id='density' name='density' type="number" min="0.0" max="1.0" value="0.5" step="0.1">
          </fieldset>
        </div>
      </div>

      <div class='row'>
        <div class='col span-6'>
          <fieldset>
            <label for='stroke'>Stroke</label>
            <input id='stroke' name='stroke' type="number" min="0.0" max="10.0" value="0.1" step="0.1">
          </fieldset>
        </div>
        <div class='col span-6'>
          <fieldset>
            <label for='jitter'>Jitter</label>
            <input id='jitter' name='jitter' type="number" min="0.0" max="1.0" value="0.0" step="0.1">
          </fieldset>
        </div>
      </div>

      <div class='row'>
        <div class='col span-6'>
          <fieldset>
            <label for='color'>Color</label>
            <input id='color' name='color' type="text" class='color'>
          </fieldset>
        </div>
        <div class='col span-6'>
          <fieldset>
            <label for='background'>Background</label>
            <input id='background' name='background' type="text" class='color'>
          </fieldset>
        </div>
      </div>

      <fieldset>
        <label for='mirror'>Mirror</label>
        <select id='mirror' name='mirror'>
          <option value='x'>X</option>
          <option value='y'>Y</option>
          <option value='both'>Both</option>
          <option value='none'>None</option>
        </select>
      </fieldset>

    </div>
  </form>

  <div class='col span-6'>
    <a target='_icon' id='icon-link' href='/'><img id='icon' src='/'></a>
  </div>
</div>

